<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.downtail.wanandroid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/app_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="design_height_in_dp"
            android:value="640" />
        <meta-data
            android:name="design_width_in_dp"
            android:value="360" />

        <activity
            android:name=".ui.main.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.main.MainActivity"
            android:theme="@style/MainTheme"
            android:launchMode="singleTask" />

        <activity
            android:name=".ui.mine.activity.PreferenceActivity"
            android:launchMode="singleTask" />

        <activity
            android:name=".ui.main.LoginActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name=".ui.mine.activity.CollectActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name=".ui.browser.BrowserActivity"
            android:launchMode="singleTask" />

        <activity
            android:name=".ui.mine.activity.RankActivity"
            android:launchMode="singleTask" />

        <activity
            android:name=".ui.mine.activity.RecordActivity"
            android:launchMode="singleTask" />

        <activity android:name=".ui.service.ClientActivity"
            android:launchMode="singleTask"/>

    </application>

</manifest>